model Review {
  id          String   @id @default(cuid())
  eventId     String
  eventName   String
  answers     Json
  userId      String?
  isAnonymous Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([eventId])
  @@index([userId])
}

model Event {
  id          String   @id @default(cuid())
  name        String
  description String   @db.Text
  date        DateTime
  time        String
  location    String
  image       String?
  capacity    Int
  registered  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
} 